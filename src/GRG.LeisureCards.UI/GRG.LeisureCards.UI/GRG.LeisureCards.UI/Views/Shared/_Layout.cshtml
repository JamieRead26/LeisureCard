<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Leisure Card</title>

   

    @Styles.Render("~/bundles/css")

    <!--[if lt IE 9]>
      <script src="/Scripts/html5shiv.min.js"></script>
      <script src="/Scripts/respond.min.js"></script>
    <![endif]-->

</head>
<body ng-app="leisureApp" ng-controller="globalCtrl">

    @{Html.RenderPartial("Header");}

    <div class="content">
        <div class="container" ng-show="global.slideshow.length != 0">
        <div class="container slideshowcont" ng-if="global.slideshow != null">
            <div class="row">
                <div class="twelvecol last">
                    <div slideit="global.slideshow"></div>
                </div>
            </div>
            <div class="slideshowmask">
                <div><img ng-src="/Content/grg/img/carousel-mask.png" /></div>
            </div>
        </div>
        </div>

        <div class="container">
            <div class="row">

                @RenderBody()

            </div>
        </div>
        <div class="clear"></div>
    </div>

    @{Html.RenderPartial("Footer");}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" type="text/javascript"></script>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/appjs")

</body>
</html>

