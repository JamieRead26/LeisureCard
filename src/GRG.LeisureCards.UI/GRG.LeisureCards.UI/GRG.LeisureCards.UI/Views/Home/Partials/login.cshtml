@{
    Layout = "";
}

<div class="twocol"></div>
<div class="eightcol">
    @Html.Raw(ViewBag.loginCopy)
    <form ng-controller="LoginController" ng-submit="login()" class="home loginform">
        @Html.Raw(ViewBag.pleaseEnter)
        <div class="field">
            <input type="text" placeholder="Card number" ng-model="card_number" />
            <div class="errors" ng-show="errors != null">{{ errors }}</div>
            <input type="submit" value="Enter" />
        </div>
    </form>

</div>
<div class="clear"></div>