@{
    Layout = "";
}

<div class="twelvecol" ng-controller="offersExperienceController">

    <div class="special-offers-title"><img src="~/Content/grg/img/ed-title.jpg" /></div>

    <div class="special-offers-banner">
        <h2>Amazing Special Offers</h2>
        <p>As a leisure card holder you will recieve an EXTRA 20% off on all sale prices!</p>
        <div class="special-offers-banner-star"><img src="~/Content/grg/img/star.png"></div>
    </div>

    <div class="special-offers">

        <ul>
            <li ng-repeat="s in special_offers">
                <a href="{{ s.Url }}" target="_blank">
                    <img ng-src="{{ s.ThumbnailUrl }}" />
                    <div class="special-offer-copy">
                        <p>{{ s.Title }}</p>
                        <p>{{ s.InspirationalDescription }}</p>
                        <div class="tidy"></div>
                    </div>
                </a>
            </li>
        </ul>
        <div class="clear"></div>

    </div>
